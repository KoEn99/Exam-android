</string>

    <style name="ButtonText">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="ButtonRegistrationText">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Register.RegisterActivity"
    android:orientation="vertical"
    android:isScrollContainer="true">

    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="ЗАРЕГИСТРИРОВАТЬСЯ"
        android:textColor="#000000"
        android:textSize="20sp"

        />

    <EditText
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/edtext_style"
        android:hint="Телефон"
        android:textColorHint="@color/cardview_dark_background" />

    <EditText
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edtext_style"
        android:id="@+id/Pass"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:hint="Введите пароль"
        android:textColorHint="@color/cardview_dark_background" />

    <EditText
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edtext_style"
        android:id="@+id/editTextConfPass"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:hint="Подтверждение пароля"
        android:textColorHint="@color/cardview_dark_background" />


    <EditText
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edtext_style"
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:hint="Введите E-mail"
        android:textColorHint="@color/cardview_dark_background"


        />


    <EditText
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edtext_style"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:hint="Имя"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="16sp" />

    <EditText
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edtext_style"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:hint="Фамилия"
        android:textColorHint="@color/cardview_dark_background" />

    <EditText
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edtext_style"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:hint="Отчество"
        android:textColorHint="@color/cardview_dark_background" />


    <Button

        android:id="@+id/buttonRegist"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/ok_btn_check"
         />

    <TextView
        android:id="@+id/toLogin"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Уже зарегистрированы? Войти"
        android:textColor="#000000"
        android:textSize="20dp" />

</LinearLayout>
</ScrollView>

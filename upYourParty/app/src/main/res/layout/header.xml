<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFF9F9"
    >

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profileImage_view"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/profileimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FIO_view"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="44dp"
        android:textColor="#000000"
        android:text="Имя Отчество Фамилия"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/profileImage_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:text="вашапочта@gmail.com"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/profileImage_view"
        app:layout_constraintTop_toBottomOf="@+id/FIO_view" />




</androidx.constraintlayout.widget.ConstraintLayout>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:centerY="0.05"
        android:startColor="#21182648"
        android:centerColor="#0D686AB1"
        android:endColor="#0D686AB1"
        android:angle="270"
        />
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />
    <corners
        android:radius="25dp" />
</shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF"/>
            <gradient
                android:centerX="0.05"
                android:startColor="#21182648"
                android:centerColor="#0D686AB1"
                android:endColor="#0D686AB1"
                android:angle="0"/>
            <corners
                android:radius="26dp"/>

        </shape>
    </item>

</layer-list>